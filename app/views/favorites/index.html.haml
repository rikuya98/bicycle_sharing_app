.container
  .profile_container
    .profile_name
      %h3= current_user.display_name
      .profile_avatar
        .dropdown
          = image_tag current_user.avatar_image
          .dropdown-content
            = link_to 'プロフィール編集',edit_profile_path
    .profile_content
      %p 年齢：#{current_user.age || '?歳'}
      %p 性別：#{I18n.t("enum.genders.#{current_user.gender || 'unknown'}")}
      %p 自転車の種類：#{current_user.bicycle_type}
      %p=current_user.introduction
  .nav_bar
    .nav_bar_item.active
      = link_to '投稿した記事',profile_path
    .nav_bar_item
      = link_to 'いいねした記事',favorites_path
  - @articles.each_with_index do |article, index|
    = render 'articles/article_all', article: article, index: index