.container
  .topslide
    = image_tag 'top_image2.jpg'
    = image_tag 'top_image3.jpg'
    = image_tag 'top_image4.jpg'
  .nav_bar
    %h3 新着記事
    %h3 人気記事
  .article_container
    - @articles.each do |article|
      .article
        = link_to article_path(article.id) do
          .article_image
            = image_tag article.article_image(article.images.first) 
        %h5=article.title
        %ul.tag
          %li= article.prefecture.name
          - article.tags.each do |tag|
            %li= tag.name
        .user_icon
          =image_tag article.user.avatar_image
          .user_name
            = article.user.display_name
            %p #{article.created_at.strftime('%Y年%m月%d日')}
          .like_btn
            =image_tag 'like_btn2.png'
            %p=article.like_count