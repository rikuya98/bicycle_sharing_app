.article{class: index % 3 == 2 ? 'last' : nil}
  = link_to article_path(article.id) do
    .article_image
      = image_tag article.article_image(article.images.first) 
  .content
    %h5=article.title
    %ul.tag
      %li= article.prefecture.name
      - article.tags.each do |tag|
        %li= tag.name
    .user_icon
      =image_tag article.user.avatar_image
      .user_name
        = article.user.display_name
        %p #{article.created_at.strftime('%Y年%m月%d日')}
      .like_btn
        =image_tag 'like_btn2.png'
        %p=article.like_count
